<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.syntapps.time2sleep">

    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <uses-permission android:name="android.permission.ACCESS_NOTIFICATION_POLICY" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher_xd"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_xd_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:theme="@style/SplashTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <!-- <receiver android:name=".MainActivity2$MyReceiver" >
             <intent-filter>
                 <action android:name="android.intent.action.TIME_TICK"/>
             </intent-filter>
         </receiver> -->

        <service
            android:name=".MyService"
            android:icon="@mipmap/ic_launcher_xd_round"
            android:label="My Service" />
        <receiver
            android:name="com.syntapps.time2sleep.Alarm"
            android:enabled="true"
            android:exported="true" />

    </application>

</manifest>